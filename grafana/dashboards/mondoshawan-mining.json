{
  "title": "mondoshawan Mining Metrics",
    "tags": ["mondoshawan", "mining", "tristream"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Stream A Blocks Mined",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_blocks_mined_stream_a_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Stream B Blocks Mined",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_blocks_mined_stream_b_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Stream C Blocks Mined",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_blocks_mined_stream_c_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Total Mining Rewards",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_mining_rewards_total / 1000000000000000000",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            },
            "unit": "short",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "title": "Blocks Mined by Stream",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(mondoshawan_blocks_mined_stream_a_total[5m])",
            "legendFormat": "Stream A",
            "refId": "A"
          },
          {
            "expr": "rate(mondoshawan_blocks_mined_stream_b_total[5m])",
            "legendFormat": "Stream B",
            "refId": "B"
          },
          {
            "expr": "rate(mondoshawan_blocks_mined_stream_c_total[5m])",
            "legendFormat": "Stream C",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "label": "Blocks/sec",
            "format": "short"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Mining Rewards Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "rate(mondoshawan_mining_rewards_total[5m]) / 1000000000000000000",
            "legendFormat": "Rewards (tokens/sec)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Tokens/sec",
            "format": "short",
            "decimals": 4
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "Stream Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "mondoshawan_blocks_mined_stream_a_total",
            "legendFormat": "Stream A",
            "refId": "A"
          },
          {
            "expr": "mondoshawan_blocks_mined_stream_b_total",
            "legendFormat": "Stream B",
            "refId": "B"
          },
          {
            "expr": "mondoshawan_blocks_mined_stream_c_total",
            "legendFormat": "Stream C",
            "refId": "C"
          }
        ]
      },
      {
        "id": 8,
        "title": "Block Mining Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(mondoshawan_blocks_mined_total[1m]) * 60",
            "legendFormat": "Blocks/min",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Blocks/min",
            "format": "short",
            "decimals": 2
          },
          {
            "format": "short"
          }
        ]
      }
    ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  }
}
