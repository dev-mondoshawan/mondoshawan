{
  "title": "mondoshawan Transaction Metrics",
    "tags": ["mondoshawan", "transactions", "throughput"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Transactions Processed (Total)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_transactions_processed_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Transaction Pool Size",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_transaction_pool_size",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 10000, "color": "orange"},
                {"value": 50000, "color": "red"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Transactions Per Second",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_transactions_per_second",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 10, "color": "yellow"},
                {"value": 100, "color": "green"}
              ]
            },
            "unit": "tps",
            "decimals": 2
          }
        }
      },
      {
        "id": 4,
        "title": "Transaction Processing Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "rate(mondoshawan_transactions_processed_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 10, "color": "yellow"},
                {"value": 100, "color": "green"}
              ]
            },
            "unit": "ops",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "title": "Transaction Processing Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(mondoshawan_transactions_processed_total[5m])",
            "legendFormat": "TX Processing Rate",
            "refId": "A"
          },
          {
            "expr": "mondoshawan_transactions_per_second",
            "legendFormat": "Current TPS",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "TX/sec",
            "format": "short",
            "decimals": 2
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Transaction Pool Size Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "mondoshawan_transaction_pool_size",
            "legendFormat": "Pool Size",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Transactions",
            "format": "short",
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [100000],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "last"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "Transaction Pool Size Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 7,
        "title": "Transactions Per Block",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(mondoshawan_transactions_processed_total[5m]) / rate(mondoshawan_blocks_mined_total[5m])",
            "legendFormat": "TX per Block",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Transactions",
            "format": "short",
            "decimals": 0,
            "min": 0
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "title": "Transaction Throughput Efficiency",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "mondoshawan_transactions_per_second / mondoshawan_transaction_pool_size * 100",
            "legendFormat": "Throughput Efficiency %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Efficiency %",
            "format": "percent",
            "min": 0,
            "max": 100
          },
          {
            "format": "short"
          }
        ]
      }
    ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  }
}
