# Auto detect text files and perform LF normalization
* text=auto

# Rust files
*.rs text eol=lf

# Markdown files
*.md text eol=lf

# HTML/CSS/JS files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Configuration files
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf

# PowerShell scripts (keep CRLF for Windows)
*.ps1 text eol=crlf
