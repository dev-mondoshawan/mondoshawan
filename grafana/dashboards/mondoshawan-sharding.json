{
  "title": "mondoshawan Sharding Metrics",
    "tags": ["mondoshawan", "sharding", "scalability"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Cross-Shard Transactions",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_cross_shard_transactions_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Cross-Shard Transaction Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(mondoshawan_cross_shard_transactions_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            },
            "unit": "ops",
            "decimals": 2
          }
        }
      },
      {
        "id": 3,
        "title": "Total Shards",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "count(mondoshawan_shard_transaction_count)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Total Shard Transactions",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(mondoshawan_shard_transaction_count)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "title": "Transactions Per Shard",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "mondoshawan_shard_transaction_count",
            "legendFormat": "Shard {{shard_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Transactions",
            "format": "short"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Cross-Shard Transaction Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "rate(mondoshawan_cross_shard_transactions_total[5m])",
            "legendFormat": "Cross-Shard TX/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "TX/sec",
            "format": "short",
            "decimals": 2
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "Shard Load Distribution",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "mondoshawan_shard_transaction_count",
            "legendFormat": "Shard {{shard_id}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 5000, "color": "red"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 8,
        "title": "Shard Utilization",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "mondoshawan_shard_transaction_count / (sum(mondoshawan_shard_transaction_count) / count(mondoshawan_shard_transaction_count)) * 100",
            "legendFormat": "Shard {{shard_id}} Utilization %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Utilization %",
            "format": "percent",
            "max": 200,
            "min": 0
          },
          {
            "format": "short"
          }
        ]
      }
    ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  }
}
