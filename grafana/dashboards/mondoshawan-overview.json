{
  "title": "mondoshawan Blockchain Overview",
  "tags": ["mondoshawan", "blockchain", "overview"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "10s",
  "panels": [
      {
        "id": 1,
        "title": "Blocks Mined (Total)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_blocks_mined_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 1000, "color": "red"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Transactions Processed",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_transactions_processed_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 10000, "color": "red"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Peers Connected",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_peers_connected",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Transactions Per Second",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_transactions_per_second",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 10, "color": "yellow"},
                {"value": 100, "color": "green"}
              ]
            },
            "unit": "tps",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "title": "Blocks Mined Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(mondoshawan_blocks_mined_total[5m])",
            "legendFormat": "Blocks Mined (rate)",
            "refId": "A"
          },
          {
            "expr": "rate(mondoshawan_blocks_received_total[5m])",
            "legendFormat": "Blocks Received (rate)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Blocks/sec",
            "format": "short"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Transaction Pool Size",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "mondoshawan_transaction_pool_size",
            "legendFormat": "Pool Size",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Transactions",
            "format": "short"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "Block Size Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(mondoshawan_block_size_bytes_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(mondoshawan_block_size_bytes_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(mondoshawan_block_size_bytes_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "label": "Bytes",
            "format": "bytes"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "title": "Network Messages",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(mondoshawan_messages_sent_total[5m])",
            "legendFormat": "Messages Sent",
            "refId": "A"
          },
          {
            "expr": "rate(mondoshawan_messages_received_total[5m])",
            "legendFormat": "Messages Received",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Messages/sec",
            "format": "short"
          },
          {
            "format": "short"
          }
        ]
      }
    ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  }
}
