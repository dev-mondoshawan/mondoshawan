{
  "title": "mondoshawan Network Metrics",
    "tags": ["mondoshawan", "network", "p2p"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Connected Peers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_peers_connected",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Messages Sent (Total)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_messages_sent_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Messages Received (Total)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "mondoshawan_messages_received_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Message Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "rate(mondoshawan_messages_sent_total[5m]) + rate(mondoshawan_messages_received_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            },
            "unit": "ops",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "title": "Network Message Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(mondoshawan_messages_sent_total[5m])",
            "legendFormat": "Messages Sent",
            "refId": "A"
          },
          {
            "expr": "rate(mondoshawan_messages_received_total[5m])",
            "legendFormat": "Messages Received",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Messages/sec",
            "format": "short",
            "decimals": 2
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Peer Connection Status",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "mondoshawan_peers_connected",
            "legendFormat": "Connected Peers",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Peers",
            "format": "short",
            "min": 0
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "Network Throughput",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(mondoshawan_messages_sent_total[1m])",
            "legendFormat": "Outbound (msg/sec)",
            "refId": "A"
          },
          {
            "expr": "rate(mondoshawan_messages_received_total[1m])",
            "legendFormat": "Inbound (msg/sec)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Messages/sec",
            "format": "short",
            "decimals": 2
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "title": "Message Ratio (Sent/Received)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(mondoshawan_messages_sent_total[5m]) / rate(mondoshawan_messages_received_total[5m])",
            "legendFormat": "Send/Receive Ratio",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Ratio",
            "format": "short",
            "decimals": 2,
            "min": 0
          },
          {
            "format": "short"
          }
        ]
      }
    ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  }
}
